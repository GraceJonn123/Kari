<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jijjy.grace.kari.About"
    android:background="@color/purple">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kari Jobe"
                android:textAlignment="center"
                android:id="@+id/kari"
                android:paddingBottom="30dp"
                android:textSize="30sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/About1"
                android:id="@+id/intro"
                android:layout_below="@+id/kari"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sing"
                android:layout_below="@+id/intro"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="39dp"
                android:id="@+id/sing"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/Abo"
                android:layout_below="@+id/sing"
                android:layout_alignParentLeft="true"
                android:id="@+id/mar"
                android:layout_alignParentStart="true"
                android:layout_marginTop="41dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/l"
                android:layout_below="@+id/mar"
                android:id="@+id/dress"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/About1"
                android:id="@+id/imari"
                android:layout_below="@+id/dress"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/h"
                android:layout_below="@+id/imari"
                android:id="@+id/kiss"/>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
